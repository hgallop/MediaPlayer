<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:bottomLeftRadius="@dimen/rad1"
        android:bottomRightRadius="@dimen/rad2"
        android:topLeftRadius="@dimen/rad2"
        android:topRightRadius="@dimen/rad1" />
    <gradient
        android:centerColor="@color/colorAccent"
        android:centerX="35%"
        android:centerY="50%"
        android:endColor="@color/colorPrimary"
        android:gradientRadius="100"
        android:startColor="@color/colorPrimaryDark"
        android:type="linear" />
    <padding
        android:bottom="@dimen/pad"
        android:left="@dimen/pad"
        android:right="@dimen/pad"
        android:top="@dimen/pad" />
    <size
        android:width="@dimen/buttonW"
        android:height="@dimen/buttonH" />
    <stroke
        android:width="@dimen/stroke"
        android:color="@color/colorPrimary" />
</shape>
